<p id="notice"><%= notice %></p>

<h1>Listing Activity Validators</h1>

<table>
  <thead>
    <tr>
      <th>Activity type</th>
      <th>Activity field</th>
      <th>Description</th>
      <th>Formula</th>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activity_validators.each do |activity_validator| %>
      <tr>
        <td><%= activity_validator.activity_type %></td>
        <td><%= activity_validator.activity_field %></td>
        <td><%= activity_validator.description %></td>
        <td><%= activity_validator.formula %></td>
        <td><%= activity_validator.message %></td>
        <td><%= link_to 'Show', activity_validator %></td>
        <td><%= link_to 'Edit', edit_activity_validator_path(activity_validator) %></td>
        <td><%= link_to 'Destroy', activity_validator, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

