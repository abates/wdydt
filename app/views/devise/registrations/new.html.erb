

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "authentication-form" }) do |f| %>
  <h3 class="form-register-heading">Sign up or <%= link_to "Log in", new_user_session_path %></h3>
  <%= f.error_notification %>

  <%= render "devise/shared/omniauth_login" %>
  <div class="hr"><span class="hr-label">Or</span></div>

  <%= f.input :email, wrapper: :vertical_form, label_html: { :class => "sr-only"} do %>
    <div class="input-group">
      <div class="input-group-addon"><%= fa_icon "user" %></div>
      <%= f.input_field :email, required: true, autofocus: true, placeholder: 'Email Address', class: "form-control" %>
    </div>
  <% end %>

  <%= f.input :name, wrapper: :vertical_form, label_html: { :class => "sr-only"} do %>
    <div class="input-group">
      <div class="input-group-addon"><%= fa_icon "user" %></div>
      <%= f.input_field :name, required: true, placeholder: 'Name', class: "form-control" %>
    </div>
  <% end %>

  <%= f.input :password, wrapper: :vertical_form, label_html: { :class => "sr-only"} do %>
    <div class="input-group">
      <div class="input-group-addon"><%= fa_icon "lock" %></div>
      <%= f.input_field :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), placeholder: 'Password', class: "form-control" %>
    </div>
  <% end %>

  <%= f.input :password_confirmation, wrapper: :vertical_form, label_html: { :class => "sr-only"} do %>
    <div class="input-group">
      <div class="input-group-addon"><%= fa_icon "lock" %></div>
      <%= f.input_field :password_confirmation, required: true, placeholder: 'Password Confirmation', class: "form-control" %>
    </div>
  <% end %>

  <div class="form-actions">
    <%= f.button :submit, "Sign up", class: "btn btn-lg btn-primary btn-block" %>
  </div>
  <%= render "devise/shared/links" %>
<% end %>


