
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "authentication-form", method: :post }) do |f| %>
  <h3>Forgot your password?</h3>
  <p>Submit your email address below and password reset instructions will be sent to you shortly</p>
  <%= f.error_notification %>

  <%= f.input :email, wrapper: :vertical_form, label_html: { :class => "sr-only"} do %>
    <div class="input-group">
      <div class="input-group-addon"><%= fa_icon "user" %></div>
      <%= f.input_field :email, required: true, autofocus: true, placeholder: 'Email Address', class: 'form-control' %>
    </div>
  <% end %>

  <div class="form-actions">
    <%= f.button :submit, "Submit", class: "btn btn-lg btn-primary btn-block" %>
  </div>
  <%= render "devise/shared/links" %>
<% end %>

