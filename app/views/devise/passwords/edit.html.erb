
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <h3>Change your password</h3>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <%= f.input :password, wrapper: :vertical_form, label_html: { :class => "sr-only"} do %>
    <div class="input-group">
      <div class="input-group-addon"><%= fa_icon "lock" %></div>
      <%= f.input_field :password, required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), placeholder: 'New Password', class: "form-control" %>
    </div>
  <% end %>

  <%= f.input :password_confirmation, wrapper: :vertical_form, label_html: { :class => "sr-only"} do %>
    <div class="input-group">
      <div class="input-group-addon"><%= fa_icon "lock" %></div>
      <%= f.input_field :password_confirmation, required: true, placeholder: "Confirm your new password", class: "form-control" %>
    </div>
  <% end %>

  <div class="form-actions">
    <%= f.button :submit, "Change my password" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
