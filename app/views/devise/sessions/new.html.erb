<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-login" }) do |f| %>
  <h2 class="form-login-heading">Log in</h2>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true, label_html: { :class => "sr-only"} %>
    <%= f.input :password, required: false, label_html: { :class => "sr-only"} %>
    <div class="checkbox">
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "btn btn-lg btn-primary btn-block" %>
  </div>
  <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %>
  <%= render "devise/shared/links" %>
<% end %>

