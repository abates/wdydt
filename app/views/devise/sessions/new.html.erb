<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "authentication-form" }) do |f| %>
  <h3 class="form-login-heading">Login or <%= link_to "Sign up", new_user_registration_path %></h3>

  <%= render "devise/shared/omniauth_login" %>
  <div class="hr"><span class="hr-label">Or</span></div>

  <%= f.input :email, wrapper: :vertical_form, label_html: { :class => "sr-only"} do %>
    <div class="input-group">
      <div class="input-group-addon"><%= fa_icon "user" %></div>
      <%= f.input_field :email, required: false, autofocus: true, placeholder: 'Email Address', class: 'form-control' %>
    </div>
  <% end %>


  <%= f.input :password, wrapper: :vertical_form, label_html: { :class => "sr-only"} do %>
    <div class="input-group">
      <div class="input-group-addon"><%= fa_icon "lock" %></div>
      <%= f.input_field :password, required: false, placeholder: 'Password', class: 'form-control' %>
    </div>
  <% end %>

  <div class="checkbox">
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "btn btn-lg btn-primary btn-block" %>
  </div>
  <%= render "devise/shared/links" %>
<% end %>

