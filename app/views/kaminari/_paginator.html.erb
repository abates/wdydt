<%# The container tag
  - available local variables
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
    paginator:     the paginator that renders the pagination tags inside
-%>
<%= paginator.render do -%>
  <nav>
    <ul class="pagination">
      <li class="page-item<%= current_page.first? ? ' disabled' : '' %>"><%= prev_page_tag %></li>
      <li class="page-item<%= current_page.first? ? ' disabled' : '' %>"><%= first_page_tag %></li>
      <% each_page do |page| -%>
        <% if page.left_outer? || page.right_outer? || page.inside_window? -%>
        <li class="page-item<%= page.current? ? ' active' : '' %>"><%= page_tag page %></li>
        <% elsif !page.was_truncated? -%>
        <li class="page-item"><%= gap_tag %></li>
        <% end -%>
      <% end -%>
      <li class="page-item<%= current_page.last? ? ' disabled' : '' %>"><%= last_page_tag %></li>
      <li class="page-item<%= current_page.last? ? ' disabled' : '' %>"><%= next_page_tag %></li>
    </ul>
  </nav>
<% end -%>
